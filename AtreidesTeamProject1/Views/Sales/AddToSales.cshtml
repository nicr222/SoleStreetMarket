@model Sales
@{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
    ViewData["Title"] = "Cart Input Page";
    var loggedInUser = Context.Session.GetString("LoggedInUser"); //Get the username of logged-in user from the session state.
    var name = "";
    var address = "";
    var phoneNum = "";
    var email = "";
}
<link rel="stylesheet" href="~/css/cartInfo.css" />
<!--Cart Info Modal-->
<!--This will test to see if the user is logged in in order to grab their infomation and display it-->
@if (string.IsNullOrEmpty(loggedInUser))
{
    //Do nothing.
}
else
{
    name = Model.Customer.Name;
    address = Model.Customer.Address;
    phoneNum = Model.Customer.PhoneNum;
    email = Model.Customer.Email;
}

    </br><br />
    <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content formborder23">
        <div class="card-body ">
            
            <form asp-action="AddToSales" class="row g-3" novalidate method="post">
                    <div class="personal-information">
                        <h1>Please enter payment information</h1>
                    </div> <!-- end of personal-information -->

                <input type="number" asp-for="Quantity" id="currency-field" class="paymentInputs inputborder" value="@Model.Quantity" readonly hidden />
                <input type="number" asp-for="Total" id="currency-field" class="paymentInputs inputborder" value="@Model.Total" hidden />
                <label class="form-label totallbl">Total: $@Model.Total</label>
                
                <div class="col-md-6">
                    <label for="Name" class="form-label">Name</label>
                    <div class="input-group">
                        <span class="input-group-text" id="inputGroupPrepend"><i class="bi bi-file-text"></i></span>
                        <input asp-for="Name" type="text" name="Name" class="form-control" id="Name" value="@name" required>
                    </div>
                    <div class="orangebrg inputborder"><span asp-validation-for="Name" class="orangebrg text-danger"></span></div>
                </div>

                <div class="col-md-6">
                    <label for="CardNumber" class="form-label">Card Number</label>
                    <div class="input-group">
                        <span class="input-group-text" id="inputGroupPrepend"><i class="bi bi-credit-card"></i></span>
                        <input asp-for="CardNumber" type="text" name="CardNumber" class="form-control" id="CardNumber" required>
                    </div>
                    
                    <div class="orangebrg inputborder"><span asp-validation-for="CardNumber" class="text-danger"></span></div>
                </div>

                <div class="col-md-6">
                    <label for="Expiry" class="form-label">Expiration Date</label>
                    <div class="input-group">
                        <span class="input-group-text" id="inputGroupPrepend"><i class="bi bi-calendar"></i></span>
                        <input asp-for="Expiry" type="text" name="Expiry" class="form-control" id="Expiry" placeholder="mm/yyyy" required>
                    </div>
                    <div class="orangebrg inputborder"><span asp-validation-for="Expiry" class="text-danger"></span></div>
                </div>

                <div class="col-md-6">
                    <label for="CVC" class="form-label">CVC</label>
                    <div class="input-group">
                        <span class="input-group-text" id="inputGroupPrepend"><i class="bi bi-key"></i></span>
                        <input asp-for="CVC" type="number" name="CVC" class="form-control" id="CVC"  required>
                    </div>
                    <div class="orangebrg inputborder"><span asp-validation-for="CVC" class="text-danger"></span></div>
                </div>

                <div class="col-12">
                    <label for="StreetAddress" class="form-label">Street Address</label>
                    <div class="input-group">
                        <span class="input-group-text" id="inputGroupPrepend"><i class="bi bi-file-text"></i></span>
                        <input asp-for="StreetAddress" type="text" name="StreetAddress" class="form-control" id="StreetAddress" value="@address" required>
                    </div>
                    <div class="orangebrg inputborder"><span asp-validation-for="StreetAddress" class="text-danger"></span></div>
                </div>

                <div class="col-md-6">
                    <label for="City" class="form-label">City</label>
                    <div class="input-group">
                        <span class="input-group-text" id="inputGroupPrepend"><i class="bi bi-file-text"></i></span>
                        <input asp-for="City" type="text" name="City" class="form-control" id="City" required>
                    </div>
                    <div class="orangebrg inputborder"><span asp-validation-for="City" class="text-danger"></span></div>
                </div>

                <div class="col-md-6">
                    <label for="State" class="form-label">State</label>
                    <div class="input-group">
                        <span class="input-group-text" id="inputGroupPrepend"><i class="bi bi-file-text"></i></span>
                        <select asp-for="State" class="form-select paymentInputs inputborder border-23" name="State">
                            <option value="">--Select--</option>
