@model AtreidesTeamProject1.Models.ProfileView

@{
    ViewData["Title"] = "Profile";
}

<link rel="stylesheet" href="css/profile.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="css/EditProfileValidation.css" />

<script src="/js/profile.js"></script>

<script src="~/js/profileValidation.js"></script>

<main id="main" class="main">

    <section class="section profile">
        <div class="container" data-aos="fade-up">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" id="SuccessMessage">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" id="ErrorMessage">
                @TempData["ErrorMessage"]
            </div>
        }
        <div class="row">

            <div class="col-xl-4">

                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                        <h2>@Model.Name</h2>
                        <div class="social-links mt-2">
                            <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-xl-8">

                <div class="card">
                    <div class="card-body pt-3">
                        <!-- Bordered Tabs -->
                        <ul class="nav nav-tabs nav-tabs-bordered">
                            <li class="item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                            </li>
                                <li class="item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                            </li>
                                <li class="item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Change Password</button>
                            </li>
                        </ul>

                        <!-- Tab contents -->
                        <div class="tab-content pt-2">
                            <!-- Overview Tab -->
                            <div class="tab-pane fade show active profile-overview" id="profile-overview">
                                <h5 class="card-title">About</h5>
                                <p class="small fst-italic">Welcome! Update your details here for a better experience on our platform. </p>

                                <h5 class="card-title">Profile Details</h5>
                                <p>Full Name: @Model.Name</p>
                                <p>Username: @Model.UserName</p>
                                <p>Phone: @Model.Phone</p>
                                <p>Email: @Model.Email</p>
                                <p>Address: @Model.Address</p>
                                 <p>Country: @Model.Country</p>
                            </div>

                            <!-- Edit Profile Tab -->
                            <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                                <form asp-action="EditProfile" method="post">
                                    <h5>Edit Profile</h5>
                                    <div class="form-group">
                                        <label for="Name">Full Name</label>
                                        <input type="text" name="Name" class="form-control" value="@Model.Name" />
                                    </div>
                                    <div class="form-group">
                                        <label for="UserName">Username</label>
                                        <input type="text" name="UserName" class="form-control" value="@Model.UserName" />
                                    </div>
                                    <div class="form-group">
                                        <label for="Phone">Phone</label>
                                        <input type="text" name="Phone" class="form-control" value="@Model.Phone" />
                                    </div>
                                    <div class="form-group">
                                        <label for="Email">Email</label>
                                        <input type="text" name="Email" class="form-control" value="@Model.Email" />
                                    </div>
                                    <div class="form-group">
                                        <label for="Address">Address</label>
                                        <input type="text" name="Address" class="form-control" value="@Model.Address" />
                                    </div>
                                    <div class="form-group">
                                        <label for="Country">Country</label>
                                        <input type="text" name="Country" class="form-control" value="@Model.Country" />
                                    </div>
                                    <div class="text-center" id="save">
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </div>
                                </form>
                            </div>

                                @{
                                    Html.RenderPartial("_ChangePasswordPartial", new AtreidesTeamProject1.Models.ChangePasswordModel());
                                }

                        </div><!-- End Bordered Tabs -->

                    </div>
                </div>

            </div>
        </div>
    </div>
    </section>
</main>