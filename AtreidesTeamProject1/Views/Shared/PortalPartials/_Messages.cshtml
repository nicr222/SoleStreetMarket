@{
}

<div class="cardHeader">
    <h2>Recent Messages</h2>
    
</div>
<table>
    <thead>
        <tr>
            <td>Customer Name</td>
            <td>Email</td>
            <td>Subject</td>
            <td>Message</td>
            
        </tr>
    </thead>
    <tbody>
        @if (Model.ServiceMessages == null)
        {
            <tr><td colspan="4" class="text-center">There are Currently No Products</td></tr>
        }
        else
        {
            @foreach (var sm in Model.ServiceMessages)
            {
                <tr>
                    <td>@sm.Name</td>
                    <td>@sm.Email</td>
                    <td>@sm.Subject</td>
                    <td>@sm.Message</td>

                    @if (sm.IsArchived == false)
                    {
                    <td>
                        <form asp-action="DeleteSM" method="post" asp-route-id="@sm.ServiceMessageID">
                            <button class="btn">Completed</button>
                        </form>
                    </td>
                }
                </tr>
            }
        }

</table>
    </tbody>
</table>