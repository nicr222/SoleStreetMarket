@model List<Products>


@{
    ViewData["Title"] = "Product Page";
    <link rel="stylesheet" href="css/product.css">
    <script src="../wwwroot/js./cart.js"></script>
}




<section id="product">
    <!-- product sections -->
    <div class="container container-fluid d-flex justify-content-center">
        <div class="row mt-5">
            <div class="container text-center mb-4">
                <a asp-controller="Product" asp-action="Index" asp-route-category="All" class="filter-btn">All</a>
                <a asp-controller="Product" asp-action="Index" asp-route-category="Shoes" class="filter-btn">Shoes</a>
                <a asp-controller="Product" asp-action="Index" asp-route-category="Boots" class="filter-btn">Boots</a>
                <a asp-controller="Product" asp-action="Index" asp-route-category="Heels" class="filter-btn">Heels</a>
                <a asp-controller="Product" asp-action="Index" asp-route-category="Other" class="filter-btn">Other</a>
            </div>
            @* Loops through all the products in the table and displays them here *@
            @foreach (var item in Model)
            {
                <!-- product 1 -->
                <div class="col-sm-3">
                    <div class="card">
                        <img src="@item.Url" class="card-img-top" width="100%">
                        <div class="card-body pt-0 px-0">
                            <div class="d-flex flex-row justify-content-between mb-0 px-3">
                                <h3>@item.Name</h3>
                            </div>
                            <hr class="mt-2 mx-3">
                            <div class="d-flex flex-row justify-content-between px-3 pb-4">
                                <div class="d-flex flex-column"><span class="mb-0 fw-bold">Price:</span></div>
                                <div class="d-flex flex-column"><h5 class="range mb-0 range" id="shoe-price">$@item.Price</h5></div>
                            </div>
                            <div class="d-flex flex-row justify-content-center"><span class="mb-0 fw-bold">Description:</span></div>
                            <div class="d-flex flex-row justify-content-between px-3 pb-4">
                                
                                <div class="d-flex flex-column"><span class="range mb-0 range" id="shoe-price">@item.Description</span></div>
                            </div>

                            <div class="d-flex justify-content-center align-items-center p-3 mid">
                                <a class="btn btn-block" asp-controller="Product" asp-action="AddToCart" method="post" asp-route-productID="@item.ProductID" asp-route-departmentID="@item.DepartmentID">Add To Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- product sections end -->
</section>

